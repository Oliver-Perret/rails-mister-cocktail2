<div class="container">
  <h1>Add a new cocktail</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name , placeholder: "Ex: Mojito"  %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%=  f.button :submit, :class => "btn-primary" %>
  <% end %>

  <%= link_to "Back to index", cocktails_path  %>

</div>
