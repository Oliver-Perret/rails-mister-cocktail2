

  <h1 id="list-big-title" class="text-center"> List of cocktails </h1>

   <div class="cards">

      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12">
          <%= link_to cocktail_path(cocktail.id) do %>
              <div class="card"
                style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                       url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
                <div class="card-title"> <h4> <%= cocktail.name  %> </h4></div>
              </div>
          <% end %>
        </div>
      <% end %>


   </div>








