<div class="navbar" >

    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag "logo.png", height: 40, width: 50 %>
      <% end %>
    </div>

    <div id="navbar_right">
      <%= link_to "All cocktails", cocktails_path,  class: "navbar-wagon-item navbar-wagon-link"  %>
      <% if policy(Cocktail).create? %>
        <%= link_to "Add Cocktail", new_cocktail_path,  class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
      <div class="navbar-wagon-item">
        <% if user_signed_in? %>
          <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        <% else %>
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
      </div>
    </div>

</div>

